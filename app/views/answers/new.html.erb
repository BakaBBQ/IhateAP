<% content_for :title, "New Answer" %>
<div>
<h1>New Answer</h1>
<h3>Thank you for contributing to the cheating program</h3>


<%= form_for :answer , url: answers_path do  |f| %>
  <p>
    <%= f.label :author %>
    <%= f.text_field :author %>
<%= f.label :title %>
    <%= f.text_field :title %>

	<br>
    <%= f.label :script %>
    <%= f.file_field :script ,accept: 'text/x-java-source'%>
    <%= f.submit %>
  </p>
<% end %>
</div>

